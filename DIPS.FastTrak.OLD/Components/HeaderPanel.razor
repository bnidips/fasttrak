<article class="HeaderPanel">
    <header>
        @Header
        <svg height="5" width="100%" viewBox="0 0 100 5" preserveAspectRatio="none">
            <rect x="0" y="0" width="100" height="1" fill="#e0e0e0" />
            <rect x="0" y="2" width="100" height="1" fill="#e0e0e0" />
            <rect x="0" y="4" width="100" height="1" fill="#e0e0e0" />
        </svg>
    </header>
    <div>
        @ChildContent
    </div>
</article>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public RenderFragment? Header { get; set; }
}
