<div class="Toolbar @CssClass">
    <CascadingValue Value="this">
        @ChildContent
    </CascadingValue>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool Compact { get; set; }

    [CascadingParameter]
    public Panel? Panel { get; set; }

    private string CssClass => Panel != null ? "Separator" : "";
}